@{
    ViewData["Title"] = "SendMessagesToStudents";
}

<h2>Оповещение студентов группы</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendMessagesToStudents">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label class="control-label">Введите сообщение: </label>
                <input name="message" class="form-control" />                
            </div>            
            <div class="form-group">
                <input type="hidden" name="id" value="@ViewBag.id" />
                <input type="hidden" name="StructFacultetId" value="@ViewBag.StructFacultetId" />
                <input type="submit" value="Отправить" class="btn btn-primary" />
                <a asp-action="StudentGroupsOfFacultet" asp-route-StructFacultetId="@ViewBag.StructFacultetId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
