@model KisVuzDotNetCore2.Models.Education.RabProgram

@{
    ViewData["Title"] = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>Рабочая программа</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Discipline)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Discipline.DisciplineName.DisciplineNameName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FileModel)
        </dt>
        <dd>
            <a href="/@Model.FileModel.Path">Открыть</a>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RabProgramId" />
        <input asp-route-EduPlanId="@ViewBag.EduPlanId" type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" asp-route-EduPlanId="@ViewBag.EduPlanId" class="btn btn-default">Отмена</a>
    </form>
</div>
