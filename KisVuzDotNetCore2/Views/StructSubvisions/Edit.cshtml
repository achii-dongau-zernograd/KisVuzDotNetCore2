@model KisVuzDotNetCore2.Models.Struct.StructSubvision

@{
    ViewData["Title"] = "Структурное подразделение. Редактирование";
}

<h2>Редактирование</h2>

<h4>Структурное подразделение</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StructSubvisionId" />
            <div class="form-group">
                <label asp-for="StructSubvisionType.StructSubvisionTypeName" class="control-label"></label>
                <select asp-for="StructSubvisionTypeId" class="form-control" asp-items="ViewBag.StructSubvisionTypes"></select>
                <span asp-validation-for="StructSubvisionTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StructSubvisionName" class="control-label"></label>
                <input asp-for="StructSubvisionName" class="form-control" />
                <span asp-validation-for="StructSubvisionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StructSubvisionFioChief" class="control-label"></label>
                <input asp-for="StructSubvisionFioChief" class="form-control" />
                <span asp-validation-for="StructSubvisionFioChief" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Наименование должности руководителя структурного подразделения</label>
                <select asp-for="StructSubvisionPostChiefId" class="form-control" asp-items="ViewBag.StructSubvisionPostChiefId"></select>
                <span asp-validation-for="StructSubvisionPostChiefId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label class="control-label">Аккаунт руководителя структурного подразделения</label>
                <select asp-for="StructSubvisionAccountChiefId" class="form-control" asp-items="ViewBag.Users">
                    <option value="">Выберите аккаун руководителя</option>
                </select>
                <span asp-validation-for="StructSubvisionPostChiefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Адрес местонахождения структурного подразделения</label>
                <select asp-for="StructSubvisionAdressId" class="form-control" asp-items="ViewBag.StructSubvisionAdressId"></select>
                <span asp-validation-for="StructSubvisionAdressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StructSubvisionSite" class="control-label"></label>
                <input asp-for="StructSubvisionSite" class="form-control" />
                <span asp-validation-for="StructSubvisionSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Положение о структурном подразделении</label>
                <select asp-for="StructStandingOrderId" class="form-control" asp-items="ViewBag.files">
                    <option value="">Не выбрано</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
