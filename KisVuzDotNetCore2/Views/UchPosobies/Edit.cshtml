@model KisVuzDotNetCore2.Models.UchPosobiya.UchPosobie

@{
    ViewData["Title"] = "Редактировать данные об учебном пособии";
}

<h2>Редактировать данные об учебном пособии</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UchPosobieId" />
            <div class="form-group">
                <label asp-for="UchPosobieVidId" class="control-label"></label>
                <select asp-for="UchPosobieVidId" class="form-control" asp-items="ViewBag.UchPosobieVidId"></select>
                <span asp-validation-for="UchPosobieVidId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GodIzdaniya" class="control-label"></label>
                <input asp-for="GodIzdaniya" class="form-control" />
                <span asp-validation-for="GodIzdaniya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UchPosobieName" class="control-label"></label>
                <input asp-for="UchPosobieName" class="form-control" />
                <span asp-validation-for="UchPosobieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BiblOpisanie" class="control-label"></label>
                <input asp-for="BiblOpisanie" class="form-control" />
                <span asp-validation-for="BiblOpisanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UchPosobieFormaIzdaniyaId" class="control-label"></label>
                <select asp-for="UchPosobieFormaIzdaniyaId" class="form-control" asp-items="ViewBag.UchPosobieFormaIzdaniyaId"></select>
                <span asp-validation-for="UchPosobieFormaIzdaniyaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModelId" class="control-label"></label>
                <input asp-for="FileModelId" class="hidden" />
                <a href="/@Model.FileModel?.Path" class="control-label">@Model.FileModel?.FileName</a>
            </div>
            <div class="form-group">
                <label class="control-label">Для замены выберите файл: </label>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
