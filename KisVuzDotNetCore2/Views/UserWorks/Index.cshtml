@model IEnumerable<KisVuzDotNetCore2.Models.Users.UserWork>

@{
    ViewData["Title"] = "Работы пользователей";
}

<h2>Работы пользователя</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatePosting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserWorkType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserWorkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserWorkDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserWorkReviews)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserWorkType.UserWorkTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserWorkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserWorkDescription)
            </td>
            <td>
                @if (item.FileModel!=null)
                {
                    <a href="/@item.FileModel?.Path">Открыть</a>
                }
                else
                {
                    <p>-</p>
                }
            </td>
            <td>
                <a asp-controller="UserWorkReviews" asp-action="Index" asp-route-UserWorkId="@item.UserWorkId">@item.UserWorkReviews.Count  рецензии(ий)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserWorkId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.UserWorkId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.UserWorkId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
