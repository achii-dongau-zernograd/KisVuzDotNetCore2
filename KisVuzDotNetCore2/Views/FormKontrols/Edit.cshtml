@model KisVuzDotNetCore2.Models.Education.FormKontrol

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FormKontrolId" />
            <div class="form-group">
                <label asp-for="FormKontrolName" class="control-label"></label>
                <input asp-for="FormKontrolName" class="form-control" />
                <span asp-validation-for="FormKontrolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отменить</a>
            </div>
        </form>
    </div>
</div>


