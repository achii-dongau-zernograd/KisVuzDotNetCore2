@model IEnumerable<KisVuzDotNetCore2.Models.Education.FormKontrol>

@{
    ViewData["Title"] = "Формы контроля";
}

<h2>Формы контроля</h2>

<p>
    <a asp-action="Create" class=" btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FormKontrolName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormKontrolName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FormKontrolId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.FormKontrolId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
