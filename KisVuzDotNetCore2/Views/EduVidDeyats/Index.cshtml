@model IEnumerable<KisVuzDotNetCore2.Models.Education.EduVidDeyat>

@{
    ViewData["Title"] = "Виды деятельности";
}

<h2>Виды деятельности по учебному плану</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EduVidDeyatName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EduVidDeyatName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EduVidDeyatId">Редактировать</a> | 
                <a asp-action="Delete" asp-route-id="@item.EduVidDeyatId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
