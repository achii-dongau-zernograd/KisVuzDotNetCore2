@model IEnumerable<KisVuzDotNetCore2.Models.AcademicStat>

@{
    ViewData["Title"] = "Учёные звания";
}

<h2>Учёные звания</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AcademicStatName)
                </th>
                <th>
                    Действия
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicStatName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcademicStatId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.AcademicStatId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.AcademicStatId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
