@model IEnumerable<KisVuzDotNetCore2.Models.Education.EduLevel>

@{
    ViewData["Title"] = "Уровни образования";
}

<h2>Уровни образования</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EduLevelName)
                </th>
                <th>
                    Действия
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="EduUgses" asp-action="Index" asp-route-id="@item.EduLevelId">
                    @Html.DisplayFor(modelItem => item.EduLevelName)
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EduLevelId">Редактировать</a> |
                <a asp-controller="EduUgses" asp-action="Create" asp-route-id="@item.EduLevelId">Добавить УГС</a> |
                <a asp-controller="EduNapravls" asp-action="Index" asp-route-edulevelid="@item.EduLevelId">Направления подготовки</a> |
                <a asp-action="Delete" asp-route-id="@item.EduLevelId" class="text-danger"><span class="glyphicon glyphicon-remove"></span> Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
