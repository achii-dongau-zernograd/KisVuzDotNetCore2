@model KisVuzDotNetCore2.Models.Users.Teacher

@{
    ViewData["Title"] = "Подробнее";
}

<h2>Подробнее</h2>

<div>
    <h4>Преподаватель</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeacherFio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeacherFio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.AppUserId))
            {
                <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@Model.AppUserId">@Model.AppUser.GetFullName</a>
            }
            else
            {
                <text>Незарегистрированный пользователь</text>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.WorkExperienceGeneral)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WorkExperienceGeneral)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.WorkExperienceSpecialty)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WorkExperienceSpecialty)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TeacherId" class="btn btn-default">Редактировать</a>
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>
