@model AppUserSearchModel

@{ 
    var findedAppUsers = (IEnumerable<AppUser>)ViewBag.FindedAppUsers;
}

<h1>Поиск аккаунтов пользователей</h1>

<div>    
    <a class="btn btn-primary" asp-action="Create">Создать аккаунт</a>    
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Search" method="post">            
            <div class="form-group">
                <label class="control-label">Введите фрагмент фамилии</label>
                <input type="text" asp-for="LastNameSearchFragment" class="form-control" />                
            </div>
            <div class="form-group">
                <input type="submit" value="Поиск" class="btn btn-primary" />                
            </div>
        </form>
    </div>
</div>
<hr />


@if (findedAppUsers != null)
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>ФИО</th>
            <th>Логин</th>
            <th>Email</th>
            <th>Пароль</th>
            <th>Студент</th>
            <th>Преподаватель</th>
            <th>Действия</th>
        </tr>

        @if (findedAppUsers.Count() == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Аккаунты пользователей, удовлетворяющие запросу, не найдены.</td>
            </tr>
        }
        else
        {
            foreach (AppUser user in findedAppUsers.OrderBy(u => u.GetFullName))
            {
                <tr>
                    <td><a asp-controller="UserProfile" asp-action="Index" asp-route-id="@user.Id">@user.GetFullName</a></td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@(user.Password??"Неизвестно")</td>
                    <td>
                        @if (user.Students.Count > 0)
                        {
                            <p>Студент</p>
                        }
                        else
                        {
                            <p>-</p>
                        }
                    </td>
                    <td>
                        @if (user.Teachers.Count > 0)
                        {
                            <p>Преподаватель</p>
                        }
                        else
                        {
                            <p>-</p>
                        }
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="EditUserRoles" asp-route-id="@user.Id">Роли</a>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редактировать учетные данные</a>
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
}