@model KisVuzDotNetCore2.Models.Education.EduShedule

@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование</h2>

<h4>Календарный учебный график</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EduSheduleId" />
            <div class="form-group">
                <label asp-for="EduYearId" class="control-label"></label>
                <select asp-for="EduYearId" class="form-control" asp-items="ViewBag.EduYearId"></select>
                <span asp-validation-for="EduYearId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduProfileId" class="control-label"></label>
                <select asp-for="EduProfileId" class="form-control" asp-items="ViewBag.EduProfileId"></select>
                <span asp-validation-for="EduProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduFormId" class="control-label"></label>
                <select asp-for="EduFormId" class="form-control" asp-items="ViewBag.EduFormId"></select>
                <span asp-validation-for="EduFormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModelId" class="control-label"></label>
                <input asp-for="FileModelId" class="hidden" />
                <a href="/@Model.FileModel?.Path" class="control-label">@Model.FileModel?.FileName</a>
            </div>
            <div class="form-group">
                <label class="control-label">Для замены выберите файл: </label>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>