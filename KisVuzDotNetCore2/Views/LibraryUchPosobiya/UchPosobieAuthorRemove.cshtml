@model KisVuzDotNetCore2.Models.UchPosobiya.UchPosobieAuthor

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>Автор - Учебное пособие</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@Model.Author.AppUserId">@Model.Author.AuthorName</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UchPosobie)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UchPosobie.BiblOpisanie)
        </dd>
    </dl>
    
    <form asp-action="UchPosobieAuthorRemoveConfirmed">
        <input type="hidden" asp-for="UchPosobieAuthorId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Отмена</a>
    </form>
</div>
