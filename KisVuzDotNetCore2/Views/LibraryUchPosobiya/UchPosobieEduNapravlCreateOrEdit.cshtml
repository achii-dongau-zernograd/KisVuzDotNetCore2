@model UchPosobieEduNapravl

<h4>Учебное пособие - Направление подготовки</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="UchPosobieEduNapravlCreateOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UchPosobieEduNapravlId" />
            <input type="hidden" asp-for="UchPosobieId" />
            <div class="form-group">
                <label class="control-label">@Model.UchPosobie.BiblOpisanie</label>
            </div>
            <div class="form-group">
                <label asp-for="EduNapravlId" class="control-label"></label>
                <select asp-for="EduNapravlId" class="form-control" asp-items="ViewBag.EduNapravls"></select>
                <span asp-validation-for="EduNapravlId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>