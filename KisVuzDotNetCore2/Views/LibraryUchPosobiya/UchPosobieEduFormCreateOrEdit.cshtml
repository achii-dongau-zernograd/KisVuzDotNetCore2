@model UchPosobieEduForm

<h4>Учебное пособие - Форма обучения</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UchPosobieEduFormCreateOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UchPosobieEduFormId" />
            <input type="hidden" asp-for="UchPosobieId" />
            <div class="form-group">
                <label class="control-label">@Model.UchPosobie.BiblOpisanie</label>                
            </div>
            <div class="form-group">
                <label asp-for="EduFormId" class="control-label"></label>
                <select asp-for="EduFormId" class="form-control" asp-items="ViewBag.EduForms"></select>
                <span asp-validation-for="EduFormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>