@model IEnumerable<IdentityRole>

<div class="bg-primary panel-body">
    <h4>Роли</h4>
</div>

<p>
    <br />
    <a class="btn btn-primary" asp-action="Create">Добавить роль</a>
    <br /><br />
</p>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <tr>        
        <th>Наименование роли</th>        
        <th>Действия</th>
    </tr>
    @if(Model.Count()==0)
    {
        <tr><td colspan="4">Роли отсутствуют</td></tr>
    }
    else
    {
        foreach(var role in Model)
        {
            <tr>                
                <td>@role.Name</td>
                
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-info" asp-action="RoleUsersInfo" asp-route-id="@role.Id">Информация</a>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Редактировать</a>
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>