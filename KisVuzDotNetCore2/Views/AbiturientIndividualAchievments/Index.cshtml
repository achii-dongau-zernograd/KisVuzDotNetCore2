@model IEnumerable<KisVuzDotNetCore2.Models.Abitur.AbiturientIndividualAchievment>

@{
    ViewData["Title"] = "Индивидуальные достижения";
}

<h2>Индивидуальные достижения абитуриентов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AbiturientId)
                </th>                
                <th>
                    @Html.DisplayNameFor(model => model.AbiturientIndividualAchievmentTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileModelId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RowStatusId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@item.Abiturient.AppUserId" target="_blank">
                    @Html.DisplayFor(modelItem => item.Abiturient.AbiturientFioBirthdayEmail)
                </a>
                <br />
                (@Html.DisplayFor(modelItem => item.Abiturient.AbiturientStatus.AbiturientStatusName))
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.AbiturientIndividualAchievmentType.AbiturientIndividualAchievmentTypeName)
            </td>
            <td>
                @if(item.FileModel != null)
                {
                    <a href="/@item.FileModel.Path" target="_blank">Открыть</a>
                    <br />
                    <p>Загружено @item.FileModel.UploadDate</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowStatus.RowStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit",   new { id = item.AbiturientIndividualAchievmentId }, new { @class = "btn btn-primary" }) 
                
                @Html.ActionLink("Удалить",       "Delete", new { id = item.AbiturientIndividualAchievmentId }, new { @class="btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
