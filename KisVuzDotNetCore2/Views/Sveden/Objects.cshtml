</div>

<a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">Сведения о наличии оборудованных учебных кабинетов, объектов для проведения практических занятий</a>
<div class="collapse" id="spoiler-@spoilerCounter">
    @{spoilerCounter++; }
    <div class="well">
        
        @foreach (var eduLevel in eduLevels)
        {
            <a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">@eduLevel.EduLevelName</a>
            <div class="collapse" id="spoiler-@spoilerCounter">
                @{spoilerCounter++; }
                <div class="well">

                    @foreach (var eduUgs in eduLevel.EduUgses)
                    {
                        @foreach (var eduNapravl in eduUgs.EduNapravls)
                        {
                            <a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">@eduNapravl.EduNapravlCode - @eduNapravl.EduNapravlName</a>
                            <div class="collapse" id="spoiler-@spoilerCounter">
                                @{spoilerCounter++; }
                                <div class="well">

                                    @foreach (var eduProfile in eduNapravl.EduProfiles)
                                    {
                                        <a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">@eduProfile.EduProfileName</a>
                                        <div class="collapse" id="spoiler-@spoilerCounter">
                                            @{spoilerCounter++; }
                                            <div class="well">

                                                @foreach (var eduPlan in eduProfile.EduPlans)
                                                {
                                                    @*<a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">@eduPlan.EduForm.EduFormName - @eduPlan.EduProgramPodg.EduProgramPodgName  @eduPlan.EduYearBeginningTrainingsDescription</a>
                                                        <div class="collapse" id="spoiler-@spoilerCounter">
                                                            @{spoilerCounter++; }
                                                            <div class="well">*@

                                                    @foreach (var eduPlanEduYear in eduPlan.EduPlanEduYears)
                                                    {
                                                        if (eduPlanEduYear.DisciplinePomeshenies.Count == 0) { continue; }
                                                        if (eduPlanEduYear.EduYearId != currentEduYear) { continue; }
                                                        if (eduPlanEduYear.DisciplinePomeshenies == null || eduPlanEduYear.DisciplinePomeshenies.Count == 0) { continue; }
                                                        @*<a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">@eduPlanEduYear.EduYear.EduYearName</a>
                                                            <div class="collapse" id="spoiler-@spoilerCounter">
                                                                @{spoilerCounter++; }
                                                                <div class="well">*@

                                                        <table itemprop="purposeCab" class="invisible">
                                                            <tr>
                                                                <td itemprop="purposeCabOvz">Информация размещена по адресу http://ачгаа.рф/nash-vuz/dostupnaya-sreda </td>
                                                                <td itemprop="purposePracOvz">Информация размещена по адресу http://ачгаа.рф/nash-vuz/dostupnaya-sreda </td>
                                                            </tr>
                                                        </table>

                                                        <table itemprop="purposeCab" class="table table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>Код</th>
                                                                    <th>Наименование специальности, направления подготовки</th>
                                                                    <th>Наименование дисциплины (модуля), практик в соответствии с учебным планом</th>
                                                                    <th>Наименование специальных помещений и помещений для самостоятельной работы</th>
                                                                    <th>Оснащенность специальных помещений и помещений для самостоятельной работы</th>
                                                                    <th>Приспособленность помещений для использования инвалидами и лицами с ограниченными возможностями здоровья</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>

                                                                @foreach (var discPomeshenie in eduPlanEduYear.DisciplinePomeshenies.OrderBy(dp => dp.Discipline.DisciplineName.DisciplineNameName))
                                                                {

                                                                    string purposeCab = "purposeCabOvz";
                                                                    string purposePrac = "purposePracOvz";
                                                                    switch (discPomeshenie.Pomeshenie.PomeshenieOvz)
                                                                    {
                                                                        case null:
                                                                        case "":
                                                                        case "нет":
                                                                        case "не приспособлено":
                                                                            purposeCab = "purposeCab";
                                                                            purposePrac = "purposePrac";
                                                                            break;

                                                                    }

                                                                    <tr itemprop="@purposeCab">
                                                                        <td itemprop="eduCode">@eduNapravl.EduNapravlCode</td>
                                                                        <td itemprop="eduName">@eduNapravl.EduNapravlName (@eduProfile.EduProfileName)</td>
                                                                        <td>@discPomeshenie.Discipline.DisciplineName.DisciplineNameName</td>
                                                                        <td>@discPomeshenie.Pomeshenie.PomeshenieFullName</td>
                                                                        <td itemprop="@purposePrac">
                                                                            <ul>
                                                                                @foreach (var oborudovanie in discPomeshenie.Pomeshenie.OborudovanieList)
                                                                                {
                                                                                    <li>
                                                                                        @oborudovanie.OborudovanieName
                                                                                        @if (oborudovanie.OborudovanieCount > 0)
                                                                                        {
                                                                                            <text> (@oborudovanie.OborudovanieCount шт.)</text>
                                                                                        }
                                                                                    </li>
                                                                                }
                                                                            </ul>
                                                                        </td>
                                                                        <td>@discPomeshenie.Pomeshenie.PomeshenieOvz</td>
                                                                    </tr>

                                                                }

                                                            </tbody>
                                                        </table>

                                                        @*</div>
                                                            </div>*@
                                                    }

                                                            @*</div>
                                                        </div>*@
                                                }

                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        }

    </div>
</div>

<a href="#spoiler-@spoilerCounter" data-toggle="collapse" class="btn btn-primary btn-block">Сведения о наличии библиотек, объектов спорта, условиях питания и охраны здоровья обучающихся</a>
