@model IEnumerable<KisVuzDotNetCore2.Models.Common.EmploymentForm>

@{
    ViewData["Title"] = "Формы занятости";
}

<h2>Формы занятости</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmploymentFormName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmploymentFormName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmploymentFormId">Редактировать</a> |                
                <a asp-action="Delete" asp-route-id="@item.EmploymentFormId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
