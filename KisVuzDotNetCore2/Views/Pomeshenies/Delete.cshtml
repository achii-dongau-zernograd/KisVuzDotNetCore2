@model KisVuzDotNetCore2.Models.Sveden.Pomeshenie

@{
    ViewData["Title"] = "Удалить данные";
}

<h3>Удалить данные?</h3>
<div>
      <hr />
      <dl class="dl-horizontal">
          <dt>
              @Html.DisplayNameFor(model => model.PomeshenieName)
          </dt>
          <dd>
              @Html.DisplayFor(model => model.PomeshenieName)
          </dd>
          <dt>
              @Html.DisplayNameFor(model => model.PomeshenieOvz)
          </dt>
          <dd>
              @Html.DisplayFor(model => model.PomeshenieOvz)
          </dd>
          <dt>
              @Html.DisplayNameFor(model => model.Korpus.KorpusName)
          </dt>
          <dd>
              @Html.DisplayFor(model => model.Korpus.KorpusName)
          </dd>
          <dt>
              @Html.DisplayNameFor(model => model.PomeshenieTypes)
          </dt>
          <dd>
              @foreach (var item in Model.PomeshenieTypes)
              {
                  <p>
                      @item.PomeshenieType.PomeshenieTypeName
