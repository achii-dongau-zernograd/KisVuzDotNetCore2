@model IEnumerable<KisVuzDotNetCore2.Models.Struct.StructSubvisionType>

@{
    ViewData["Title"] = "Типы структурных подразделений";
}

<h2>Типы структурных подразделений</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StructSubvisionTypeName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StructSubvisionTypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StructSubvisionTypeId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.StructSubvisionTypeId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.StructSubvisionTypeId"><span class="text-danger"><span class="glyphicon glyphicon-remove"></span>Удалить</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
