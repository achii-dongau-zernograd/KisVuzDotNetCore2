@model IEnumerable<KisVuzDotNetCore2.Models.Files.DocumentSample>

@{
    ViewData["Title"] = "Бланки и примеры";
}

<h2>Бланки и примеры заполнения документов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentSampleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDataTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBlank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EduProfileId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileModelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentSampleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileDataType.FileDataTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBlank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduProfile.GetEduProfileFullName)
            </td>
            <td>
                @if (item.FileModel == null)
                {
                    <text>-</text>
                }
                else
                {
                    <a href="/@item.FileModel.Path" target="_blank">Открыть</a>
                }
            </td>
            <td>
                <a href="@item.Link" target="_blank">@item.Link</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocumentSampleId" class="btn btn-primary">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@item.DocumentSampleId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
