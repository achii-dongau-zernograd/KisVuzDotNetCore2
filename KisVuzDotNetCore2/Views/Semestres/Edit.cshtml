@model KisVuzDotNetCore2.Models.Education.Semestr

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SemestrId" />
            <div class="form-group">
                <label asp-for="SemestrName.SemestrNameNumber" class="control-label"></label>
                <select asp-for="SemestrNameId" class="form-control" asp-items="ViewBag.SemestrNameId"></select>
                <span asp-validation-for="SemestrNameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="KursId" value="@ViewBag.KursId" />

            </div>
            <div class="form-group">
                <input type="submit" asp-route-KursId="@ViewBag.KursId" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-KursId="@ViewBag.KursId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>


