@model KisVuzDotNetCore2.Models.Users.AppUserForeignLanguage

@{
    ViewData["Title"] = "Добавление иностранного языка";
}

<h2>Добавление иностранного языка</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAppUserForeignLanguage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="ForeignLanguageId" class="control-label"></label>
                <select asp-for="ForeignLanguageId" class ="form-control" asp-items="ViewBag.ForeignLanguages"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AppUserId" />
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Start" asp-route-selectedTab="personalInformation" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>