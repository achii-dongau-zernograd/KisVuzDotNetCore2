@model IEnumerable<KisVuzDotNetCore2.Models.Sveden.Oborudovanie>

@{
    ViewData["Title"] = "Оборудование";
}

<h2>Оборудование</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OborudovanieName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OborudovanieCount)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Pomeshenie.PomeshenieName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OborudovanieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OborudovanieCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pomeshenie.PomeshenieFullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OborudovanieId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.OborudovanieId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
