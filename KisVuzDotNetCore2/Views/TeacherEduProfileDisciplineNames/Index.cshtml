@model IEnumerable<KisVuzDotNetCore2.Models.Users.TeacherEduProfileDisciplineName>

@{
    ViewData["Title"] = "Преподаватель. Профили - дисциплины";
}

<h2>Преподаватель. Перечень преподаваемых дисциплин</h2>

<p>
    <a asp-action="Create" asp-route-fioSearch="@ViewBag.fioSearch" class="btn btn-primary">Добавить</a>    
</p>

<form>
    <input type="text" name="fioSearch" value="@ViewBag.fioSearch" />
    <input type="submit" value="Найти">
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.EduProfile)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DisciplineName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.TeacherFio)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.EduProfile.GetEduProfileFullName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineName.DisciplineNameName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeacherEduProfileDisciplineNameId" asp-route-fioSearch="@ViewBag.fioSearch">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.TeacherEduProfileDisciplineNameId" asp-route-fioSearch="@ViewBag.fioSearch">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.TeacherEduProfileDisciplineNameId" asp-route-fioSearch="@ViewBag.fioSearch">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
