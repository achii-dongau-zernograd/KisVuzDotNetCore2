@model IEnumerable<KisVuzDotNetCore2.Models.Struct.Email>

@{
    ViewData["Title"] = "Адреса электронной почты";
}

<h2>Адреса электронной почты</h2>

<p>
    <a asp-action="Create" class="btn btn-primary  ">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmailValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailComment)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmailValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailComment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmailId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.EmailId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.EmailId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
