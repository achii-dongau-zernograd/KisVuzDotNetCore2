@model KisVuzDotNetCore2.Models.Education.Kurs

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KursId" />
            <div class="form-group">
                <label asp-for="EduKursId" class="control-label"></label>
                <select asp-for="EduKursId" class="form-control" asp-items="ViewBag.EduKursId"></select>
                <span asp-validation-for="EduKursId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="DisciplineId" value="@ViewBag.DisciplineId" />

            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-DisciplineId="@ViewBag.DisciplineId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>


