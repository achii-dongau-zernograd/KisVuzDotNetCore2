@model KisVuzDotNetCore2.Models.Users.ProfessionalRetraining

@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование</h2>

<h4>Профессиональная переподготовка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfessionalRetrainingId" />
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingDiplomRegNumber" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingDiplomRegNumber" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingDiplomRegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingDiplomNumber" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingDiplomNumber" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingDiplomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingProgramName" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingProgramName" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingProgramName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingHours" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingHours" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingCity" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingCity" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingInstitition" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingInstitition" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingInstitition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingDateStart" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingDateStart" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingDateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingDateFinish" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingDateFinish" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingDateFinish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingDateIssue" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingDateIssue" class="form-control" />
                <span asp-validation-for="ProfessionalRetrainingDateIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRetrainingFileId" class="control-label"></label>
                <input asp-for="ProfessionalRetrainingFileId" type="hidden" class="form-control" />
                <a href="/@Model.ProfessionalRetrainingFile?.Path" class="form-control">@Model.ProfessionalRetrainingFile?.FileName</a>
                <label class="control-label">Для замены выберите файл: </label>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>            
            <div class="form-group">
                <input type="hidden" name="AppUserId" value="@Model.AppUserId" />
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id="@Model.AppUserId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
