@model IEnumerable<KisVuzDotNetCore2.Models.Users.ExternalResource>

@{
    ViewData["Title"] = "Index";
}

<h2>Внешние ресурсы</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>                
                <th>
                    @Html.DisplayNameFor(model => model.ExternalResourceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExternalResourceType.ExternalResourceTypeName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model ?? new List<ExternalResource>()) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.ExternalResourceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternalResourceType.ExternalResourceTypeName)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.ExternalResourceId">Редактировать</a> |
               <a asp-action="Delete" asp-route-id="@item.ExternalResourceId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
