@model IEnumerable<KisVuzDotNetCore2.Models.Education.EduProgramEduForm>

@{
    ViewData["Title"] = "ОП - Формы обучения";
}

<h2>Образовательные программы - формы обучения</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EduProgram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EduForm)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EduProgram.GetEduProgramFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduForm.EduFormName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EduProgramEduFormId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.EduProgramEduFormId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.EduProgramEduFormId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
