@model IEnumerable<KisVuzDotNetCore2.Models.Sveden.Korpus>

@{
    ViewData["Title"] = "Перечень корпусов";
}

<h2> Перечень корпусов </h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KorpusName)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.KorpusAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KorpusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KorpusAddress.GetAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KorpusId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.KorpusId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
