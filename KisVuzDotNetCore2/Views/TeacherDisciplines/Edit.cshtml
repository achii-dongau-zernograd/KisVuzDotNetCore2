@model KisVuzDotNetCore2.Models.Users.TeacherDiscipline

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать</h2>

<h4>Закрепление преподавателя за дисциплиной в учебном году</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherDisciplineId" />
            <div class="form-group">
                <label asp-for="EduPlanEduYearId" class="control-label"></label>
                <label class="control-label">@Model.EduPlanEduYear.EduYear.EduYearName</label>
                <input asp-for="EduPlanEduYearId" hidden />
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-EduPlanId="@Model.EduPlanEduYear.EduPlanId" asp-route-EduYearId="@Model.EduPlanEduYear.EduYearId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>