@model KisVuzDotNetCore2.Models.Education.EduKurs

@{
    ViewData["Title"] = "Редактирование курса";
}

<h2>Редактирование курса</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EduKursId" />
            <div class="form-group">
                <label asp-for="EduKursNumber" class="control-label"></label>
                <input asp-for="EduKursNumber" class="form-control" />
                <span asp-validation-for="EduKursNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduKursName" class="control-label"></label>
                <input asp-for="EduKursName" class="form-control" />
                <span asp-validation-for="EduKursName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
