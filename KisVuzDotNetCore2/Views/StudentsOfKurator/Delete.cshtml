@model KisVuzDotNetCore2.Models.Students.Student

@{
    ViewData["Title"] = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить все данные о студенте?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentGroup)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentGroup.StudentGroupName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StudentFio)
        </dt>
        <dd>
            @if (Model.AppUser!=null)
            {
                <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@Model.AppUser.Id">
                    @Model.StudentFio
                </a>
            }
            else
            {
                @Model.StudentFio
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ZachetnayaKnijkaNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ZachetnayaKnijkaNumber)
        </dd>        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" name="StructFacultetId" value="@ViewBag.StructFacultetId" />
        <input type="hidden" name="StudentGroupId" value="@Model.StudentGroupId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" asp-route-StudentGroupId="@Model.StudentGroupId" asp-route-StructFacultetId="@ViewBag.StructFacultetId" class="btn btn-default">Отмена</a>
    </form>
</div>
