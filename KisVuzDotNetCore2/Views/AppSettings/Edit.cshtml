@model AppSetting

@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование</h2>

<h4>Настройки приложения</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppSettingId" />
            <div class="form-group">
                <label asp-for="AppSettingName" class="control-label"></label>
                <input asp-for="AppSettingName" class="form-control" />
                <span asp-validation-for="AppSettingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppSettingValue" class="control-label"></label>
                <input asp-for="AppSettingValue" class="form-control" />
                <span asp-validation-for="AppSettingValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>