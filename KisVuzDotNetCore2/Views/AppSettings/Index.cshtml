@model IEnumerable<KisVuzDotNetCore2.Models.Common.AppSetting>

@{
    ViewData["Title"] = "Настройки";
}

<h2>Настройки</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AppSettingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppSettingValue)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppSettingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppSettingValue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppSettingId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.AppSettingId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
