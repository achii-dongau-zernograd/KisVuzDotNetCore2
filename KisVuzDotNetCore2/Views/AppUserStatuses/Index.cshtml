@model IEnumerable<KisVuzDotNetCore2.Models.AppUserStatus>

@{
    ViewData["Title"] = "Статусы пользователей";
}

<h2>Статусы пользователей</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AppUserStatusName)
                </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUserStatusName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppUserStatusId" class="btn btn-primary">Редактировать</a>                
                <a asp-action="Delete" asp-route-id="@item.AppUserStatusId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
