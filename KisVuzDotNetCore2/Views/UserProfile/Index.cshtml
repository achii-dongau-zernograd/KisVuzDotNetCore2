@model AppUser
<div class="bg-primary panel-body">
    <h4>Профиль пользователя @Model.UserName</h4>
</div>
<div asp-validation-summary="All" class="text-danger"></div>

@if (Model.AppUserPhoto != null)
{
    <img style='width:150px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.AppUserPhoto))" />
}

<p>Логин:    @Model.UserName  @if (String.IsNullOrWhiteSpace(Model.UserName))
{<i>Не указано</i>}</p><br />
<p>Фамилия:  @Model.LastName    @if (String.IsNullOrWhiteSpace(Model.LastName))
{<i>Не указано</i>}</p><br />
<p>Имя:      @Model.FirstName   @if (String.IsNullOrWhiteSpace(Model.FirstName))
{<i>Не указано</i>}</p><br />
<p>Отчество: @Model.Patronymic  @if (String.IsNullOrWhiteSpace(Model.Patronymic))
{<i>Не указано</i>}</p><br />

@if (Model.Birthdate == null || Model.Birthdate.Equals(new DateTime()))
{
    <i>Не указано</i>
}
else
{
    <p>Дата рождения: @String.Format("{0:dd.MM.yyyy}", Model.Birthdate)</p>
}
<br />

<p>Email: @Model.Email  @if (String.IsNullOrWhiteSpace(Model.Email))
{<i>Не указано</i>}</p><br />
<p>Телефон: @Model.PhoneNumber  @if (String.IsNullOrWhiteSpace(Model.PhoneNumber))
{<i>Не указано</i>}</p><br />

<a asp-action="ChangeProfile" class="btn btn-primary">Изменить профиль</a>
