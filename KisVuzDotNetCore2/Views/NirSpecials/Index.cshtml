@model IEnumerable<KisVuzDotNetCore2.Models.Nir.NirSpecial>

@{
    ViewData["Title"] = "Специальности научных работников";
}

<h2>Специальности научных работников</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NirSpecialCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NirSpecialName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NirSpecialCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NirSpecialName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NirSpecialId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.NirSpecialId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
