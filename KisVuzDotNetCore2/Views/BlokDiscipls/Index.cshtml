@model IEnumerable<KisVuzDotNetCore2.Models.Education.BlokDiscipl>

@{
    ViewData["Title"] = "Блоки дисциплин";
}

<h2>Блоки дисциплин</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.EduPlanId" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlokDisciplName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EduPlan)
            </th>
            <th>
                Содержание блока дисциплин
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlokDisciplName.BlokDisciplNameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduPlan.EduPlanDescription)
            </td>
            <td>
                <a asp-controller="BlokDisciplChasts" asp-action="index" asp-route-id="@item.BlokDisciplId">Открыть</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BlokDisciplId" asp-route-eduplanid="@ViewBag.EduPlanId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.BlokDisciplId" asp-route-eduplanid="@ViewBag.EduPlanId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.BlokDisciplId" asp-route-eduplanid="@ViewBag.EduPlanId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
