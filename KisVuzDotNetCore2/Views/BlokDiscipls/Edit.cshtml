@model KisVuzDotNetCore2.Models.Education.BlokDiscipl

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать блок дисциплин</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlokDisciplId" />
            <div class="form-group">
                <label asp-for="BlokDisciplName" class="control-label"></label>
                <select asp-for="BlokDisciplNameId" class="form-control" asp-items="ViewBag.BlokDisciplNameId"></select>
                <span asp-validation-for="BlokDisciplNameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="hidden" asp-for="EduPlanId" value="@ViewBag.EduPlanId" />
                    <input  type="hidden" name="eduplanid" value="@ViewBag.EduPlanId" />              
            </div>
            <div class="form-group">
                <input type="submit" asp-route-eduplanid="@ViewBag.EduPlanId"value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id="@ViewBag.EduPlanId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

