@model KisVuzDotNetCore2.Models.Nir.Monograf

@{
    ViewData["Title"] = "Добавление (редактирование) сведений  о монографии";
}

<h2>Добавление (редактирование) сведений  о монографии</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateOrEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MonografId" />
            <div class="form-group">
                <label asp-for="MonografName" class="control-label"></label>
                <input asp-for="MonografName" class="form-control" />
                <span asp-validation-for="MonografName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearId" class="control-label"></label>
                <select asp-for="YearId" class="form-control" asp-items="ViewBag.Years"></select>
                <span asp-validation-for="YearId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsACHII" /> @Html.DisplayNameFor(model => model.IsACHII)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Авторы</label>

                <div class="row">
                    <div class="col-md-9">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-8">
                                        <input name="AuthorFilter" value="@ViewBag.AuthorFilter" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.ApplyAuthorFilter" value="Найти" class="btn btn-primary btn-block form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <select name="AuthorIdAdd" class="form-control" asp-items="ViewBag.Authors">
                                    <option value="0">Выберите автора и нажмите кнопку "Добавить"</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input name="AuthorPart" value="0,5" class="form-control" />
                            </div>
                        </div>

                    </div>
                    <div class="col-md-3">
                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.AddingAuthor" value="Добавить" class="btn btn-primary btn-block form-control" />
                    </div>
                </div>

                <br />
                <label class="control-label">Добавленные авторы</label>
                <ul class="list-group">
                    @if (Model.MonografAuthors == null || Model.MonografAuthors.Count == 0)
                    {
                        <li class="list-group-item text-danger">
                            Авторы не добавлены
                        </li>
                    }
                    else
                    {
                        foreach (var monografAuthor in Model.MonografAuthors)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-8">
                                        @monografAuthor.Author.AuthorName
                                    </div>
                                    <div class="col-md-2">
                                        @monografAuthor.AuthorPart.ToString("N")
                                    </div>
                                    <div class="col-md-2">
                                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.RemovingAuthor" asp-route-AuthorIdRemove="@monografAuthor.AuthorId" value="Удалить" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="form-group">
                <label class="control-label">Список научных специальностей</label>
                <div class="row">
                    <div class="col-md-9">
                        <select name="NirSpecialIdAdd" class="form-control" asp-items="ViewBag.NirSpecials">
                            <option value="0">Выберите научную специальность и нажмите кнопку "Добавить"</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.AddingNirSpecial" value="Добавить" class="btn btn-primary btn-block form-control" />
                    </div>
                </div>

                <br />
                <label class="control-label">Добавленные научные специальности</label>
                <ul class="list-group">
                    @if (Model.MonografNirSpecials == null || Model.MonografNirSpecials.Count == 0)
                    {
                        <li class="list-group-item text-danger">
                            Научные специальности не добавлены
                        </li>
                    }
                    else
                    {
                        foreach (var monografNirSpecial in Model.MonografNirSpecials)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-9">
                                        @monografNirSpecial.NirSpecial.NirSpecialName
                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.RemovingNirSpecial" asp-route-NirSpecialIdRemove="@monografNirSpecial.NirSpecialId" value="Удалить" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="form-group">
                <label class="control-label">Список тем НИР</label>
                <div class="row">
                    <div class="col-md-9">
                        <select name="NirTemaIdAdd" class="form-control" asp-items="ViewBag.NirTemas">
                            <option value="0">Выберите тему НИР и нажмите кнопку "Добавить"</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.AddingNirTema" value="Добавить" class="btn btn-primary btn-block form-control" />
                    </div>
                </div>

                <br />
                <label class="control-label">Добавленные темы НИР</label>
                <ul class="list-group">
                    @if (Model.MonografNirTemas == null || Model.MonografNirTemas.Count == 0)
                    {
                        <li class="list-group-item text-danger">
                            Темы НИР не добавлены
                        </li>
                    }
                    else
                    {
                        foreach (var monografNirTema in Model.MonografNirTemas)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-9">
                                        @monografNirTema.NirTema.NirTemaName
                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" asp-route-mode="@CreateOrEditNirDataModeEnum.RemovingNirTema" asp-route-NirTemaIdRemove="@monografNirTema.NirTemaId" value="Удалить" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <hr>

            <div class="form-group">
                <label asp-for="FileModelId" class="control-label"></label>
                @if (Model.FileModel != null)
                {
                    <br />
                    <label class="control-label">
                        <a href="/@Model.FileModel.Path">@Model.FileModel.FileName</a>
                    </label>
                    <br />
                    <label class="control-label">
                        Для замены выберите новый файл
                    </label>
                }

                <input type="file" name="uploadedFile" class="form-control" />
                <span asp-validation-for="FileModelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
