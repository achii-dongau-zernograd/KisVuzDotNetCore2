@model IEnumerable<KisVuzDotNetCore2.Models.Abitur.AdmissionPrivilege>

@{
    ViewData["Title"] = "Льготы";
}

<h2>Льготы абитуриентов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить льготу</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationForAdmission.AbiturientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationForAdmissionId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdmissionPrivilegeTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileModelId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RowStatusId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationForAdmission.Abiturient.AbiturientFioBirthdayEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationForAdmission.ApplicationForAdmissionFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionPrivilegeType.AdmissionPrivilegeTypeName)
            </td>
            <td>
                @if(item.FileModel != null)
                {
                    <a href="/@item.FileModel.Path" target="_blank">Открыть</a>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowStatus.RowStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.AdmissionPrivilegeId }, new { @class="btn btn-primary" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.AdmissionPrivilegeId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
