@model IEnumerable<KisVuzDotNetCore2.Models.Users.UserAchievment>

@{
    ViewData["Title"] = "Index";
}

<h2>Достижения</h2>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAchievmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAchievmentType.UserAchievmentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>            
            <td>
                <a asp-action="CreateOrEdit" asp-route-id="@item.UserAchievmentId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.UserAchievmentId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
