@model IEnumerable<KisVuzDotNetCore2.Models.Struct.Post>

@{
    ViewData["Title"] = "Должности";
}

<h2>Должности</h2>

<p>
    <a asp-action="Create" class=" btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PostName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
