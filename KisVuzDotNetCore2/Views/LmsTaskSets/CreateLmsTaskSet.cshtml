@model KisVuzDotNetCore2.Models.LMS.LmsTaskSet

@{
    ViewData["Title"] = "Добавление";
}

<h2>Добавление набора заданий</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLmsTaskSet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="LmsTaskSetDescription" class="control-label"></label>
                <input asp-for="LmsTaskSetDescription" class="form-control" />
                <span asp-validation-for="LmsTaskSetDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>