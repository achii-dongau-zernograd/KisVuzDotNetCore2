@model IEnumerable<KisVuzDotNetCore2.Models.Education.EduAccred>

@{
    ViewData["Title"] = "Свидетельства о гос. аккредитации";
}

<h2>Свидетельства о государственной аккредитации</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EduAccredNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EduAccredDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EduAccredDateExpiration)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.EduAccredFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EduAccredNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduAccredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduAccredDateExpiration)
            </td>
            <td>
                <a href="/@item.EduAccredFile.Path">@item.EduAccredFile.Name</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EduAccredId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.EduAccredId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.EduAccredId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
