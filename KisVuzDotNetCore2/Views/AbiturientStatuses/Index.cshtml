@model IEnumerable<KisVuzDotNetCore2.Models.Abitur.AbiturientStatus>

@{
    ViewData["Title"] = "Index";
}

<h2>Статусы абитуриентов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AbiturientStatusName)
                </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AbiturientStatusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbiturientStatusName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit",   new { id = item.AbiturientStatusId }, new { @class="btn btn-primary" })                
                @Html.ActionLink("Удалить",       "Delete", new { id = item.AbiturientStatusId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
