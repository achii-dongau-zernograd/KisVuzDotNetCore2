@model KisVuzDotNetCore2.Models.Education.EduProfile

@{
    ViewData["Title"] = "Редактировать профиль подготовки / направленность / специализацию";
}

<h2>Редактировать профиль подготовки / направленность / специализацию</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EduProfileId" />
            <div class="form-group">
                <label asp-for="EduProfileName" class="control-label"></label>
                <input asp-for="EduProfileName" class="form-control" />
                <span asp-validation-for="EduProfileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduNapravl.EduNapravName" class="control-label"></label>
                <select asp-for="EduNapravl.EduNapravName" class="form-control" asp-items="ViewBag.EduNapravlId"></select>
                <span asp-validation-for="EduNapravl.EduNapravName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
