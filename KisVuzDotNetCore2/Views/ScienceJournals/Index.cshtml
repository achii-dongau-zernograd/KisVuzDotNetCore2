@model IEnumerable<KisVuzDotNetCore2.Models.Nir.ScienceJournal>

@{
    ViewData["Title"] = "Научные журналы";
}

<h2>Научные журналы</h2>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScienceJournalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsZarubejn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScienceJournalCitationBases)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.ELibraryLink)">@Html.DisplayFor(modelItem => item.ScienceJournalName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsZarubejn)
            </td>
            <td>
                @foreach(var scienceJournalCitationBase in item.ScienceJournalCitationBases)
                {
                    <p>
                        @scienceJournalCitationBase.CitationBase.CitationBaseName
                    </p>                    
                }
            </td>
            <td>
                <a asp-action="CreateOrEdit" asp-route-id="@item.ScienceJournalId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.ScienceJournalId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
