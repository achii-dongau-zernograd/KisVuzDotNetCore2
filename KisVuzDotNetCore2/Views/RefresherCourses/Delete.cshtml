            <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@Model.AppUser.Id">@Model.AppUser.GetFullName</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseFile)
        </dt>
        <dd>
            <a href="/@Model.RefresherCourseFile.Path">Открыть</a>
