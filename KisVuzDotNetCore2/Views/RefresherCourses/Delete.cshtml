}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>Курс повышения квалификации</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseHours)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseHours)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseCity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseCity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseInstitition)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseInstitition)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseDateStart)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseDateStart)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefresherCourseDateFinish)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefresherCourseDateFinish)
