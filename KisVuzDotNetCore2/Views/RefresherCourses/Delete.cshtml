    <form asp-action="Delete">
        <input type="hidden" asp-for="RefresherCourseId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" asp-route-id="@Model.AppUser.Id" class="btn btn-default">Отмена</a>
    </form>
