@model KisVuzDotNetCore2.Models.Students.VedomostStudentMark

@{
    ViewData["Title"] = "Редактирование";
    var vedomost = (Vedomost)ViewData["vedomost"];
}

<h2>Редактирование записи в ведомости группы @vedomost.StudentGroup.StudentGroupName</h2>
<h3>Курс @vedomost.Kurs. Семестр @vedomost.SemestrName.SemestrNameNumber</h3>
<h3>Дисциплина: @vedomost.DisciplineName</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VedomostStudentMarkId" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VedomostStudentMarkNameId" class="control-label"></label>
                <select asp-for="VedomostStudentMarkNameId" class="form-control" asp-items="ViewBag.VedomostStudentMarkNameId"></select>
                <span asp-validation-for="VedomostStudentMarkNameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="VedomostId" value="@vedomost.VedomostId" />
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-controller="Vedomosti" asp-action="VedomostStudentMarks" asp-route-id="@Model.Vedomost.VedomostId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>