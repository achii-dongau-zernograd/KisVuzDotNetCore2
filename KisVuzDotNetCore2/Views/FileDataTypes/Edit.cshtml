@model KisVuzDotNetCore2.Models.FileDataType

@{
    ViewData["Title"] = "Редактирование типа файлов";
}

<h2>Редактирование типа файлов</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileDataTypeId" />

            <div class="form-group">
                <label asp-for="FileDataTypeGroupId" class="control-label"></label>
                <select asp-for="FileDataTypeGroupId" class="form-control" asp-items="ViewBag.FileDataTypeGroups"></select>
                <span asp-validation-for="FileDataTypeGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileDataTypeName" class="control-label"></label>
                <input asp-for="FileDataTypeName" class="form-control" />
                <span asp-validation-for="FileDataTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itemprop" class="control-label"></label>
                <input asp-for="Itemprop" class="form-control" />
                <span asp-validation-for="Itemprop" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
