@model KisVuzDotNetCore2.Models.Education.FondOcenochnihSredstv

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактировать</h2>

<h4>Фонд оценчных средств</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FondOcenochnihSredstvId" />
            <input type="hidden" name="EduPlanId" value="@ViewBag.EduPlanId" />
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileModelId" class="control-label"></label>
                <input asp-for="FileModelId" class="hidden" />
                <a href="/@Model.FileModel?.Path" class="control-label">@Model.FileModel?.FileName</a>
            </div>
            <div class="form-group">
                <label class="control-label">Для замены выберите файл: </label>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-route-EduPlanId="@ViewBag.EduPlanId" class="btn btn-default">Назад</a>
            </div>
        </form>
    </div>
</div>