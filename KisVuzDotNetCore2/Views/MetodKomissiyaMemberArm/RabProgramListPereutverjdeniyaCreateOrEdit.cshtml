@model RabProgram

<h2>Добавление / редактирование листа переутверждения рабочей программы</h2>
<h3>@Model.Discipline.DisciplineCode @Model.Discipline.DisciplineName.DisciplineNameName</h3>
@if (Model.FileModel != null)
{
    <h3>
        <a href="/@Model.FileModel?.Path" class="control-label" target="_blank">Рабочая программа</a>
    </h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RabProgramListPereutverjdeniyaCreateOrEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.FileModelListPereutverjdeniya == null)
            {
                <div class="form-group">
                    <label class="control-label">Выберите файл: </label>
                    <input type="file" name="uploadedFile" class="form-control" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="FileModelListPereutverjdeniyaId" class="control-label"></label>
                    <input asp-for="FileModelListPereutverjdeniyaId" class="hidden" />
                    <a href="/@Model.FileModelListPereutverjdeniya?.Path" class="control-label">@Model.FileModelListPereutverjdeniya?.FileName</a>
                </div>
                <div class="form-group">
                    <label class="control-label">Для замены выберите файл: </label>
                    <input type="file" name="uploadedFile" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="hidden" name="EduPlanId" value="@ViewBag.EduPlanId" />
                <input type="hidden" asp-for="DisciplineId" />
                <input type="hidden" asp-for="RabProgramId" />
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="EduPlanPreview" asp-route-id="@ViewBag.EduPlanId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

