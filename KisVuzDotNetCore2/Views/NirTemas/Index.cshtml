@model IEnumerable<KisVuzDotNetCore2.Models.NirTema>

@{
    ViewData["Title"] = "Темы НИР";
}

<h2>Темы НИР</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NirTemaName)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NirTemaName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NirTemaId">Редактировать</a>
                <a asp-action="Details" asp-route-id="@item.NirTemaId">Подробнее</a>
                <a asp-action="Delete" asp-route-id="@item.NirTemaId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
