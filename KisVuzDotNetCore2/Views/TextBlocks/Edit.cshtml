@model KisVuzDotNetCore2.Models.Common.TextBlock

@{
    ViewData["Title"] = "Редактировать текстовый блок";    
}

<h2>Редактировать текстовый блок</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TextBlockId" />
            <div class="form-group">
                <label asp-for="TextBlockText" class="control-label"></label>
                <input asp-for="TextBlockText" class="form-control" />
                <span asp-validation-for="TextBlockText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TextBlockTag" value="@Model.TextBlockTag" />
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
