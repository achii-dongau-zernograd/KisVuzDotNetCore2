@model KisVuzDotNetCore2.Models.UchPosobiya.UchPosobieAuthor

@{
    ViewData["Title"] = "Редактировать данные о учебном пособии-авторе";
}

<h2>Редактировать данные о учебном пособии-авторе</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
