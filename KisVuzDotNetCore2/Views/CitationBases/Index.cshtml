@model IEnumerable<KisVuzDotNetCore2.Models.Nir.CitationBase>

@{
    ViewData["Title"] = "Базы цитирования";
}

<h2>Базы цитирования</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CitationBaseName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CitationBaseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CitationBaseId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.CitationBaseId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
