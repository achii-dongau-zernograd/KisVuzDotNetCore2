@model IEnumerable<KisVuzDotNetCore2.Models.AcademicDegree>

@{
    ViewData["Title"] = "Учёные степени";
}

<h2>Учёные степени</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AcademicDegreeName)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicDegreeGroup)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicDegreeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicDegreeGroup.AcademicDegreeGroupName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcademicDegreeId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.AcademicDegreeId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.AcademicDegreeId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
