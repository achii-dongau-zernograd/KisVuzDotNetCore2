@model IEnumerable<KisVuzDotNetCore2.Models.Priem.BlankNum>

@{
    ViewData["Title"] = "Index";
}

<h2>Информация о количестве поданных заявлений о приёме</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table itemprop="blankNum" class="table">
    <thead>
        <tr>
            <th rowspan="2">
                Код
            </th>
            <th rowspan="2">
                Направление подготовки (специальности)
            </th>
            <th rowspan="2">
                Всего
            </th>
            <th colspan="3">
                Количество поданных заявлений о приёме
            </th>
            <th rowspan="2">
                Действия
            </th>
        </tr>
        <tr>
            <th>
                Очное
            </th>
            <th>
                Заочное
            </th>
            <th>
                Очно-заочное
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr itemprop="blankNum">
            <td>
                @item.EduNapravl.EduNapravlCode
            </td>
            <td>
                @item.EduNapravl.EduNapravlName
            </td>
            <td>
                @item.Sum
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Och)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zaoch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OchZaoch)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BlankNumId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.BlankNumId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.BlankNumId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
