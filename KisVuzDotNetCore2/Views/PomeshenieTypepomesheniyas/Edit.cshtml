@model KisVuzDotNetCore2.Models.Sveden.PomeshenieTypepomesheniya

@{
    ViewData["Title"] = "Редактировать тип помещения";
}

<h2>Редактировать тип помещения</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PomeshenieTypepomesheniyaId" />
            <div class="form-group">
                <label asp-for="Pomeshenie.PomeshenieName" class="control-label"></label>
                <select asp-for="PomeshenieId" class="form-control" asp-items="ViewBag.PomeshenieId"></select>
                <span asp-validation-for="PomeshenieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PomeshenieType.PomeshenieTypeName" class="control-label"></label>
                <select asp-for="PomeshenieTypeId" class="form-control" asp-items="ViewBag.PomeshenieTypeId"></select>
                <span asp-validation-for="PomeshenieTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
