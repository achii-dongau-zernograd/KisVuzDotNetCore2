@model KisVuzDotNetCore2.Models.Struct.StructUniversity

@{
    ViewData["Title"] = "Добавить университет";
}

<h2>Добавить университет</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StructUniversityName" class="control-label"></label>
                <input asp-for="StructUniversityName" class="form-control" />
                <span asp-validation-for="StructUniversityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfCreation" class="control-label"></label>
                <input asp-for="DateOfCreation" class="form-control" />
                <span asp-validation-for="DateOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.GetAddress" class="control-label"></label>
                <select asp-for="AddressId" class ="form-control" asp-items="ViewBag.Addresses"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ExistenceOfFilials" /> @Html.DisplayNameFor(model => model.ExistenceOfFilials)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="WorkingRegime" class="control-label"></label>
                <input asp-for="WorkingRegime" class="form-control" />
                <span asp-validation-for="WorkingRegime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingSchedule" class="control-label"></label>
                <input asp-for="WorkingSchedule" class="form-control" />
                <span asp-validation-for="WorkingSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Index"  class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
