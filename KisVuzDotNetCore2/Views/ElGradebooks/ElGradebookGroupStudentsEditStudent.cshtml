@model ElGradebookGroupStudent

<h2>Редактирование записи о студенте в электронном журнале</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ElGradebookGroupStudentsEditStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ElGradebookGroupStudentId" />
            <input type="hidden" asp-for="ElGradebookId" />
            <div class="form-group">
                <label asp-for="ElGradebookGroupStudentFio" class="control-label"></label>
                <input asp-for="ElGradebookGroupStudentFio" class="form-control" />
                <span asp-validation-for="ElGradebookGroupStudentFio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                <input asp-for="AppUserId" class="form-control" />
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="ElGradebookGroupStudents" asp-route-elGradebookId="@Model.ElGradebookId" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>
