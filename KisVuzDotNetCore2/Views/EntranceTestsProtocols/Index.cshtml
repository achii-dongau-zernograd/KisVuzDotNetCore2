@model IEnumerable<KisVuzDotNetCore2.Models.Priem.EntranceTestsProtocol>

@{
    ViewData["Title"] = "Index";
}

<h2>Протоколы вступительных испытаний</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abiturient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVidachi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@item.Abiturient.AppUserId" target="_blank">@item.Abiturient.AppUser.GetFullName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVidachi)
            </td>
            <td>
                @if(string.IsNullOrWhiteSpace(item.FileName))
                {
                    <a asp-action="GeneratePdf" asp-route-entranceTestsProtocolId="@item.EntranceTestsProtocolId" class="btn btn-primary">Сформировать</a>
                }
                else
                {
                    <a href="/@item.FileName" target="_blank">Открыть</a>
                    <a asp-action="GeneratePdf" asp-route-entranceTestsProtocolId="@item.EntranceTestsProtocolId">
                        <span class="glyphicon glyphicon-refresh"></span>
                    </a>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EntranceTestsProtocolId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.EntranceTestsProtocolId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.EntranceTestsProtocolId" class="text-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
