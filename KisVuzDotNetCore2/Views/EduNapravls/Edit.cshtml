@model KisVuzDotNetCore2.Models.Education.EduNapravl

@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование направления подготовки / специальности</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EduNapravlId" />
            <div class="form-group">
                <label asp-for="EduUgs.EduUgsName" class="control-label"></label>
                <select asp-for="EduUgsId" class="form-control" asp-items="ViewBag.EduUgsId"></select>
                <span asp-validation-for="EduUgsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduNapravlCode" class="control-label"></label>
                <input asp-for="EduNapravlCode" class="form-control" />
                <span asp-validation-for="EduNapravlCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduNapravlName" class="control-label"></label>
                <input asp-for="EduNapravlName" class="form-control" />
                <span asp-validation-for="EduNapravlName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduQualification.EduQualificationName" class="control-label"></label>
                <select asp-for="EduQualificationId" class="form-control" asp-items="ViewBag.EduQualifications"></select>
                <span asp-validation-for="EduQualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EduNapravlStandartDocLink" class="control-label"></label>
                <input asp-for="EduNapravlStandartDocLink" class="form-control" />
                <span asp-validation-for="EduNapravlStandartDocLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
